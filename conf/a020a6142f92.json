{
    "friendly_name": "Greenthumb",
    "exception_reset": false,
    "device": {
        "dht22": {
            "pin": 14,
            "read": {
                "function": "read_dht22",
                "interval": 30
            },
            "publish": {
                "interval": 60
            }
        },
        "relay": {
            "pin": 12,
            "read": {
                "function": "read_status",
                "interval": 10
            },
            "publish": {
                "retain": true,
                "interval": 10
            },
            "subscribe": {
                "function": "write_status",
                "interval": 10
            }
        },
        "pwm": {
            "pwm": 5,
            "freq": 1000,
            "duty": 512,
            "read": {
                "function": "read_pwm",
                "interval": 10
            },
            "publish": {
                "retain": true,
                "interval": 10
            },
            "subscribe": {
                "function": "write_pwm",
                "interval": 10
            }
        }
    },
    "publish": {
        "server": "curumo.domecek"
    }
}
